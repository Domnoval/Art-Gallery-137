{
  "name": "artist-gallery-uploader",
  "private": true,
  "version": "1.1.0",
  "description": "AI-powered artwork management with Wix CMS integration",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"node server.js\" \"vite\"",
    "dev:server": "node server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "vault": "cd tools/api-vault && node server.js",
    "vault:start": "cd tools/api-vault && npm start",
    "full": "concurrently \"npm run vault\" \"npm run dev\""
  },
  "devDependencies": {
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@wix/data": "^1.0.355",
    "@wix/media": "^1.0.220",
    "@wix/sdk": "^1.17.5",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "cropperjs": "^1.6.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "multer": "^2.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "art",
    "gallery",
    "ai",
    "claude",
    "wix",
    "cms",
    "artwork",
    "portfolio"
  ],
  "author": "the37thmover"
}
